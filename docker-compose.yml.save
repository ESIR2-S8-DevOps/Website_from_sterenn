services:
  mail:
    image: fgdou/wm-project-mail:al
    depends_on:
      - mom
    restart: always
    environment:
      - EMAIL_FROM=fabigoardou@gmail.com
      - EMAIL_HOST=smtp
      - EMAIL_PORT=1025
      - RABBIT_HOST=mom
      - RABBIT_PORT=5672
      - RABBIT_USER=user
      - RABBIT_PWD=password
      - RABBIT_QUEUE=mail

  front:
    image: fgdou/wm-project-front:al
    restart: always

  proxy:
    ports:
      - 80:80
    depends_on:
      - front
      - back
    image: fgdou/wm-project-proxy:al
    restart: always

  back:
    depends_on:
      - db
      - mom
    environment:
      - DB_HOST=db
      - DB_USER=user
      - DB_PASSWORD=esir
      - DB_DATABASE=WMproject
      - DB_PORT=5432
      - RABBIT_HOST=mom
      - RABBIT_PORT=5672
      - RABBIT_USER=user
      - RABBIT_PWD=password
      - RABBIT_QUEUE=mail
    image: fgdou/wm-project-back:al
    restart: always

  db:
    image: postgres
    restart: always
    environment:
      - POSTGRES_PASSWORD=esir
      - POSTGRES_DB=WMproject
      - POSTGRES_USER=user
    olumes:
      - ./db:/var/lib/postgresql/data

  mom:
    hostname: mom
    image: fgdou/wm-project-mom:al
    environment:
      - RABBITMQ_DEFAULT_USER=user
      - RABBITMQ_DEFAULT_PASS=password
      - RABBITMQ_NODE_PORT=5672
    restart: always

  smt   image: maildev/maildev:2.0.5
    restart: always

  grafana:
    image: fgdou/wm-project-grafana:al
    environment:
      - GF_SECURITY_ADMIN_USER=user
      - GF_SECURITY_ADMIN_PASSWORD=password

  prometheus:
    image: fgdou/wm-project-prometheus:al
    depends_on:
      - mom
      - back
      - mail
      - k6export
 
